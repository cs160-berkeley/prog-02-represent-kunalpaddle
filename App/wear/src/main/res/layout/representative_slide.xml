<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:paddingTop="50dp"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENATOR"
        android:textColor="#383838"
        android:id="@+id/representativeTitle"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/representativeName" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Marco Rubio"
        android:textColor="#383838"
        android:id="@+id/representativeName"
        android:textSize="25sp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/representativeTitle"
        android:layout_alignStart="@+id/badge" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft ="20dp"
        android:id="@+id/representative_icon"
        android:src="@drawable/rep_marco_rubio"
         />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/badge"
        android:src = "@drawable/badge_republican"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/representativeName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>