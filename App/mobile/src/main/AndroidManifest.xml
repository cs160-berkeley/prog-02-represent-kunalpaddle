<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kunalpatel.represent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".PhoneToWatchService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>
        <!-- Listeners are special services that need to be declared like below, as BIND_LISTENER -->
        <activity android:name=".ZipEntry"
            android:parentActivityName=".WelcomeScreen" />
        <activity android:name=".MyRepresentatives"
            android:parentActivityName=".WelcomeScreen" />
        <activity android:name=".RepresentativeDetails"
            android:parentActivityName=".MyRepresentatives" />
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

    </application>

</manifest>
