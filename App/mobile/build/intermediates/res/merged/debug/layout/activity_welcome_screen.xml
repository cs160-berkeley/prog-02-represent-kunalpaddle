<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kunalpatel.represent.WelcomeScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPRESENT"
        android:textSize="50sp"
        android:typeface="sans"
        android:paddingTop="100sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/represent_text" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=" USE MY LOCATION "
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:elevation="8dp"
        android:id="@+id/locationButton"
        android:layout_below="@+id/tagline"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ENTER ZIP"
        android:id="@+id/zipButton"
        android:textColor="#FFFFFF"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        android:onClick = "openZipRequest"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/locationButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Let&apos;s find your representatives."
        android:paddingTop="20dp"
        android:id = "@+id/tagline"
        android:layout_below="@+id/represent_text"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
